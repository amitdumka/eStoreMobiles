                </button:SfChipGroup.ChipLayout>
                <button:SfChipGroup.Items >
                    <button:SfChip Text="  Add  "/>
                    <button:SfChip Text="Cancel"/>
                    <button:SfChip Text="Update"/>

                </button:SfChipGroup.Items>
            </button:SfChipGroup>
